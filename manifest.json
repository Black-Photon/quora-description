{

  "manifest_version": 2,
  "name": "quora-description",
  "version": "1.0",

  "description": "Attempt to restore descriptions on Quora on Firefox",
  "homepage_url": "https://github.com/Black-Photon/quora-description/tree/master",
  "icons": {
    "48": "icons/quora-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.quora.com/*"],
      "js": ["background/background-script.js"]
    }
  ]
}